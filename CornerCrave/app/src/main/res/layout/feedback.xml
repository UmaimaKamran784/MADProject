<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back_arrow"></ImageView>
        <TextView
            android:id="@+id/tvfeedbackname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Feedback"
            android:textSize="35dp"
            ></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="25dp"
        android:text="Share your reviews"
        android:textSize="20dp"
        android:textStyle="bold"
        ></TextView>
    <EditText
        android:id="@+id/etfeedback"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your feedback"
        android:gravity="center"
        android:background="@drawable/edit_text_borde"
        />
    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:text="Submit"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        ></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="220dp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/btnhome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="homeButton"
            android:src="@drawable/home"
            android:clickable="true"></ImageView>

        <ImageView
            android:id="@+id/btncategory"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:contentDescription="btnCategory"
            android:src="@drawable/category"
            android:clickable="true"></ImageView>

        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:contentDescription="btnProfile"
            android:src="@drawable/profile"
            android:clickable="true"></ImageView>

        <ImageView
            android:id="@+id/btnFeedback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:contentDescription="btnFeedback"
            android:src="@drawable/feedback"
            android:clickable="true"></ImageView>
    </LinearLayout>
</LinearLayout>