<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back_arrow"></ImageView>
        <TextView
            android:id="@+id/cartname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Cart"
            android:textSize="35dp"
            ></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/sad"
        android:layout_gravity="center"
        ></ImageView>
    <TextView
        android:id="@+id/tvViewAllNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cart is empty now"
        android:gravity="center"
        android:textSize="25dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="250dp"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/btnhome"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home"
            android:contentDescription="homeButton"
            ></ImageView>
        <ImageView
            android:id="@+id/btncategory"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/category"
            android:contentDescription="btnCategory"
            ></ImageView>
        <ImageView
            android:id="@+id/btnProfile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:contentDescription="btnProfile"
            ></ImageView>
        <ImageView
            android:id="@+id/btnFeedback"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/feedback"
            android:contentDescription="btnFeedback"
            ></ImageView>
    </LinearLayout>
</LinearLayout>